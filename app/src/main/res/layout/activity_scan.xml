<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".ScanActivity">

    <LinearLayout
        android:id="@+id/reli"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="@drawable/take_action_bg"
        android:elevation="2dp">
        <TextView
            android:id="@+id/take_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Take action"
            android:fontFamily="@font/satoshi_bold"
            android:textSize="17sp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp" />
        <LinearLayout
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            android:layout_width="180dp"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginStart="25dp"
                android:background="@drawable/camera" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:background="@drawable/scan_top_bg">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:id="@+id/imageView"
            android:scaleType="fitCenter"
            android:src="@drawable/cocoscan"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_below="@id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/demoText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:visibility="visible"
                android:text="First import your image using camera"
                android:fontFamily="@font/satoshi_bold"
                android:lineSpacingMultiplier="0.9"
                android:textSize="20sp"
                android:justificationMode="inter_word"
                tools:targetApi="o" />
            <ImageView
                android:id="@+id/demoArrow"
                android:layout_width="170dp"
                android:layout_height="180dp"
                android:src="@drawable/arrow_below"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:rotation="-20"
                android:visibility="gone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The identified Pest/Disease is:"
                android:textSize="19sp"
                android:id="@+id/classified"
                android:includeFontPadding="false"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textAlignment="center"
                android:fontFamily="@font/satoshi_bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#105D5C"
                android:textSize="24sp"
                android:id="@+id/result"
                android:clickable="true"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:includeFontPadding="false"
                android:letterSpacing="0.06"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:focusable="true" />
            <TextView
                android:id="@+id/click_here"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Click on the result to know more..!"
                android:textAlignment="center"
                android:fontFamily="@font/satoshi_medium"
                android:textSize="15sp"
                android:letterSpacing="0.03"
                android:layout_marginTop="8dp"/>

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>