<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RhinoFragment"
    android:background="@drawable/bg_one">

    <!-- TODO: Update blank fragment layout -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/WHITE"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/satoshi_variable_font"
            android:text="Rhinoceros Beetle"
            android:textColor="@color/primary_text"
            android:textSize="80px" />
    </androidx.appcompat.widget.Toolbar>

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:paddingTop="70dp">

           <ImageView
               android:id="@+id/rhino_frag_img"
               android:layout_width="match_parent"
               android:layout_height="250dp"
               android:src="@drawable/rhinoceros_beetle"/>
           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content">


           </androidx.cardview.widget.CardView>

           <TextView
               android:id="@+id/rhino_subtitle_1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/rhino_frag_img"
               android:layout_marginTop="16dp"
               android:text="Coconut trees are more prone to rhinoceros beetle attacks during summer.
\n The young stage of this young beetle grows only in earth pits and waste piles. \nBut during the growing and mature stage i.e. the only the mature beetle attacks the coconut trees. \n' V ' shaped leaves are the symptoms of the beetle attack.
This is because the beetle bites the young sprout of the coconut trees."
               android:fontFamily="@font/satoshi_bold"
               android:textColor="@color/secondary_text"/>
       </RelativeLayout>
</FrameLayout>