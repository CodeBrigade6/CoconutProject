<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/crop_protection_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CropProtectionFragment"
    tools:ignore="MissingPrefix">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:fontFamily="@font/satoshi_variable_font"
        android:layout_marginStart="20dp"
        android:text="Crop Protection"
        android:textColor="@color/primary_text"
        android:textSize="25sp"
        android:layout_marginTop="0dp"
        tools:ignore="MissingConstraints" />




    <!-- TODO: Update blank fragment layout -->


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarSize="0dp"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:layout_margin="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="230dp"
                        android:layout_height="230dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/coco_disease" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="100px"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="10dp"
                        android:elegantTextHeight="true"
                        android:fontFamily="@font/satoshi_variable_font"
                        android:text="Coconut Diseases"
                        android:textSize="17sp" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:layout_margin="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="230dp"
                        android:layout_height="230dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/rhino_beetle" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="33dp"
                        android:layout_marginLeft="31dp"
                        android:layout_marginTop="10dp"
                        android:elegantTextHeight="true"
                        android:fontFamily="@font/satoshi_variable_font"
                        android:text="Coconut Pests"
                        android:textSize="17sp" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:layout_margin="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="230dp"
                        android:layout_height="230dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/nutrient_deficiency" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="100px"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="10dp"
                        android:elegantTextHeight="true"
                        android:fontFamily="@font/satoshi_variable_font"
                        android:text="Nutrient Deficiency"
                        android:textSize="17sp" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </HorizontalScrollView>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        tools:ignore="MissingConstraints" />



</LinearLayout>